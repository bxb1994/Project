<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Document</title>
    <style>
        html,body{
            width:100%;height:100%;margin:0;padding:0;

        }
        *{
            border:0;
        }
        .login-page{
            width:100%;height:100%;
            background-image:url(img/login_bg.jpg);
            overflow: hidden;
        }
        form{
            width:600px;height:75px;
            position:fixed;
            left:0;right:0;top:0;bottom:0;
            margin:auto;
            background:#E2E6E9;
            border-radius:5px;
        }
         h1{
             margin-top:200px;
             text-align: center;
             font-weight:bold;
             color:#fff;
        }
        .login-row{
            width:46%;height:100%;
            padding:8px 0;
            margin-left:15px;
            float:left;
        }
        input{
            width:100%;height:75%;
            background:#fff;
            border-radius:5px;
            border:1px solid #ccc;
            font-size:24px;

        }
        input[type=submit]{
            width:20%;height:30px;
            background:#00b0e0;
            color:#fff;
            font-size:24px;
           float:right;
            margin-right:20%;
        }

        #button{
            width:50px;height:52px;
            position:fixed;
            top:0;bottom:0;
            margin:auto;right:333px;
            background-repeat:no-repeat;
            background-image: url(img/login_button.jpg);
        }
    </style>
</head>
<body>
<div class="login-page">
    <h1>公司后台登录界面</h1>
    <form action="/login/check" method="post">

        <div class="login-row">
            <input type="text" name="username" placeholder="username">
        </div>
        <div class="login-row">
            <input type="text" name="password" placeholder="password">
        </div>
        <button type="submit" id="button"></button>
        <!--<input type="submit" value="登陆">-->
    </form>
</div>

</body>
</html>